{
  "manifest_version": 3,
  "name": "OppaClip Cookie Helper",
  "version": "1.0",
  "description": "Extracts YouTube cookies for OppaClip downloader.",
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Get YouTube Cookies"
  }
}
